{
  "name": "@ctrlemo/epos-react-hook",
  "type": "module",
  "version": "1.0.0",
  "description": "React hook for managing Epson ePOS printer connections",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:exports": "jest --testPathPatterns=exports",
    "test:built": "npm run build && jest src/__tests__/",
    "test:package": "npm run test:built",
    "test:coverage": "echo 'Coverage not applicable - tests run against built package (dist/) for production validation'",
    "lint": "echo \"Add linting later\"",
    "clean": "rm -rf dist"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(js|jsx)",
      "<rootDir>/src/**/?(*.)(test|spec).(js|jsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/setupTests.js"
    ],
    "moduleNameMapper": {
      "^react$": "<rootDir>/node_modules/react",
      "^react-dom$": "<rootDir>/node_modules/react-dom"
    }
  },
  "keywords": [
    "react",
    "hook",
    "epson",
    "epos",
    "printer",
    "thermal-printer",
    "pos-printer"
  ],
  "author": "Emory Mercera <ctrlemo@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctrlemo/epos-react-hook.git"
  },
  "bugs": {
    "url": "https://github.com/ctrlemo/epos-react-hook/issues"
  },
  "homepage": "https://github.com/ctrlemo/epos-react-hook#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rollup": "^3.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4"
  }
}
